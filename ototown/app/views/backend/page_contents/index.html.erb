<%= render layout: 'backend/shared/prepare_table', 
           locals: {
                     table_name:  'Page Contents', 
                     button_name: 'Page Contents',
                     add_method: true
                   } do %>
	<table id="example-datatable" class="table table-vcenter table-condensed table-bordered">
		<thead>
			<tr>
				<th class="text-center">No</th>
				<th>Title</th>
				<th>Category</th>
				<th>Created At</th>
				<th>Author</th>
				<th class="text-center">Actions</th>
			</tr>
		</thead>
		<tbody>
		<% @page_contents.each_with_index do |page,index| %>
			<tr>
				<td class="text-center"><%= index + 1 %></td>
				<td><a href="javascript:void(0)"><%= page.title %></a></td>
				<td><%= page.category %></td>
				<td><span class="label label-primary"><%= page.created_at %></span></td>
				<td>Admin</td>
				<td class="text-center">
					<%= render partial: 'backend/shared/action_buttons', locals: {resource: page, confirmation: "#{page.title} will be deleted, are you sure ?"} %>
				</td>
			</tr>
		<% end %>
		</tbody>
	</table>
<% end %>