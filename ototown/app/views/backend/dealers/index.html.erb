<%= render layout: 'backend/shared/prepare_table', 
           locals: {
                     table_name:  'Dealers', 
                     button_name: 'Dealers'
                   } do %>
	<table id="example-datatable" class="table table-vcenter table-condensed table-bordered">
		<thead>
			<tr>
				<th class="text-center">ID</th>
				<th>Username</th>
				<th>Fullname</th>
				<th>Email</th>
				<th>Created At</th>
				<th class="text-center">Actions</th>
			</tr>
		</thead>
		<tbody>
		<% @dealers.each do |dealer| %>
			<tr>
				<td class="text-center">1</td>
				<td><a href="javascript:void(0)"><%= dealer.username %></a></td>
				<td>Fullname</td>
				<td><span class="label label-primary"><%= dealer.email %></span></td>
				<th><%= dealer.created_at %></th>
				<td class="text-center">
					<%= render partial: 'backend/shared/action_buttons', locals: {resource: dealer, confirmation: "#{dealer.username} will be deleted, are you sure ?"} %>
				</td>
			</tr>
		<% end %>
		</tbody>
	</table>
<% end %>