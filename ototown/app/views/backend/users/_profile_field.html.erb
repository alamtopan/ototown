<fieldset>
  <legend><i class="fa fa-angle-right"></i> Personal</legend>
  <div class="form-group">
    <label class="col-md-4 control-label" for="val_website">Full Name </label>
    <div class="col-md-6">
      <div class="input-group">
        <%= f.text_field :full_name, class: 'form-control' %>
        <span class="input-group-addon"><i class="gi gi-user"></i></span>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-4 control-label" for="val_website">Birthday </label>
    <div class="col-md-6">
      <div class="input-group">
        <%= f.text_field :birthday, class: 'form-control datepicker' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-4 control-label" for="val_bio">Address </label>
    <div class="col-md-8">
      <%= f.text_area :address, rows: 4, class: 'form-control' %>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-4 control-label" for="val_website">City </label>
    <div class="col-md-6">
      <div class="input-group">
        <%= f.text_field :city, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-4 control-label" for="val_website">Codepos </label>
    <div class="col-md-6">
      <div class="input-group">
        <%= f.text_field :codepos, class: 'form-control' %>
      </div>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-4 control-label" for="val_skill">Gender </label>
    <div class="col-md-6">
      <select id="gender" name="gender" class="form-control">
        <option value="" />Please select
        <option value="html" />Laki-laki
        <option value="css" />Perempuan
      </select>
    </div>
  </div>
  <div class="form-group">
    <label class="col-md-4 control-label" for="val_credit_card">Phone Number </label>
    <div class="col-md-6">
      <div class="input-group">
        <%= f.text_field :phone, class: 'form-control' %>
      </div>
    </div>
  </div>
</fieldset>