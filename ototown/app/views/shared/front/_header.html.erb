        <li>
          <%= link_to 'Spare Parts',cars_path %> 
        </li>
        <li>
          <%= link_to 'News & Trik',news_path %> 
        </li>
        <% if current_user %>
          <li class="dropdown">
            <a href="#" class="dropdown-toggle" data-toggle="dropdown">
              <span class="glyphicon glyphicon-cog"></span>
             My Account
            </a>
            <ul class="dropdown-menu">
              <li>
                <div class="avatar-small-one avatar-small">
                  <%= image_tag "#{current_user.profile.avatar}" %>
                </div>
