          <div class="avatar-small-one">
            <%= image_tag "#{current_user.profile.avatar}" %>
          </div>
          <span class="name-ava">Hi! <%= current_user.email %></span>
        <% end %>
      </span>
    </div>
    <div class="navbar-collapse collapse">
      <ul class="nav navbar-nav navbar-right">
        <li>
          <%= link_to 'Dealers',dealers_path %> 
        </li>
        <li>
          <%= link_to 'Used Cars',cars_path %> 
        </li>
        <li>
          <%= link_to 'New Cars',cars_path %> 
