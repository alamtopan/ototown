<div id="header">
  <div class="top_info">
    <div class="logo">
      <%= link_to root_path do %>
        Oto<span>Town.com</span>
      <% end %>
    </div>
    <div class="header_contacts">
    </div>
    <div class="accs">
      <div class="btn-group">
        <% if current_user %>
          <%= link_to form_car_path do %>
            <button type="button" class="btn btn-default">
              <span class="glyphicon glyphicon-new-window"></span> Add Auto
            </button>
          <% end %>
        <% elsif %>
          <a href="#signup" data-toggle="modal" data-target=".bs-modal-sm">
            <button type="button" class="btn btn-default">
              <span class="glyphicon glyphicon-plus-sign"></span> SignUp
            </button>
          </a>
        <% end %>
        <%= link_to form_car_path do %>
          <button type="button" class="btn btn-default">
            <span class="glyphicon glyphicon-screenshot"></span> Compare Cars <span class="compare">2</span>
          </button>
        <% end %>
      </div>
    </div>
  </div>
</div>