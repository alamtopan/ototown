<div class="modal fade" id="dealer-form" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
        <h4 class="modal-title" id="myModalLabel"><strong>Profile</strong></h4>
      </div>
      <%= form_for @user, url: be_dealer_path, method: 'post' do |f| %>
        <%= f.fields_for(:dealer_info) do |info| %>
          <div class="modal-body">
            <div class="settings_form">
              <div class="col1">
                <%= info.label :title, 'Dealer Name', class: 'text' %>
                <%= info.text_field :title, class: 'text' %>
              </div>
              <div class="col2">
                <%= info.label :address, '', class: 'text' %>
                <%= info.text_area :address, class: 'text' %>
              </div>
              <div class="col1">
                <%= info.label :phone, '', class: 'text' %>
                <%= info.text_field :phone, class: 'text' %>
              </div>
              <div class="col2">
                <%= info.label :email, '', class: 'text' %>
                <%= info.text_field :email, class: 'text' %>
              </div>
              <div class="col3 last">
                <%= info.label :description, '', class: 'text' %>
                <%= info.text_area :description, rows: 4, class: 'ckeditor text' %>
              </div>
            </div>
            <div class="settings_form">
              <h2><strong>Image Dealer</strong></h2>
              <%= f.fields_for :images do |image| %>
                <%= render 'shared/front/image_dealer_form_modal', f: image %>
              <% end %>
              <div class="links">
                <%= link_to_add_association '<button type="submit" class="btn btn-sm btn-primary">+ Add Image</button>'.html_safe, f, :images %>
              </div>
            </div>
          <% end %>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          <button type="submit" class="btn btn-primary">Save changes</button>
        </div>
      <% end %>
    </div>
  </div>
</div>