<div class="wrapper_1">
	<div class="search_auto_wrapper">
		<div class="search_auto">
			<%= form_for :search, url: search_path, method: 'get' do |f| %>
				<%= f.hidden_field :category_id, value: 1 %>
				<div class="sell_box sell_box_1">
					<h2><strong>Search</strong> Vehicle</h2>
					<div class="select_wrapper hm">
						<span class="custom_chb_wrapper">
							<span class="custom_chb">
								<%= f.radio_button :condition, "All", {} %>
							</span>
							<label>ALL</label>
						</span>
					</div>
					<div class="select_wrapper hm">
						<span class="custom_chb_wrapper">
							<span class="custom_chb">
								<%= f.radio_button :condition, "Used", {} %>
							</span>
							<label>USED</label>
						</span>
					</div>
					<div class="select_wrapper hm">
						<span class="custom_chb_wrapper">
							<span>
								<%= f.radio_button :condition, "New", {} %>
							</span>
							<label>NEW</label>
						</span>
					</div>
					<div class="select_wrapper hm">
						<span class="custom_chb_wrapper">
							<span>
								<%= f.radio_button :condition, "Classic", {} %>
							</span>
							<label>CLASSIC</label>
						</span>
					</div>
					<div class="select_wrapper hm">
						<label><span>* </span><strong>Body Type:</strong></label>
				    <%= f.select :type_product, options_for_select(@types), {include_blank: 'Choose One'}, class: 'select_5' %>
					</div>
					<div class="select_wrapper hm">
						<label><span>* </span><strong>Brand:</strong></label>
						<%= f.select :brand, options_for_select(@brands), {include_blank: 'Choose One'}, class: 'select_5', id: 'brand_product', data: {url: brand_model_path} %>
					</div>
					<div class="select_wrapper hm">
						<label><span>* </span><strong>Model: </strong></label>
				    <%= f.select :model, options_for_select([]), {include_blank: 'Choose One'}, class: 'select_5', id: 'model_product' %>
					</div>
					<div class="select_wrapper hm">
						<label><span>* </span><strong>Transmission</strong></label>
				    <%= f.select :transmission, options_for_select(@transmissions), {include_blank: 'Choose One'}, class: 'select_5' %>
					</div>
					<div class="select_wrapper hm">
						<label><span>* </span><strong>Year:</strong></label>
				    <%= f.select :year, options_for_select(@years), {include_blank: 'Choose One'}, class: 'select_5' %>
					</div>
					<div class="input_wrapper hm">
						<label><span>* </span><strong>Price From:</strong></label>
						<%= f.text_field :price_from, class: 'txb' %>
					</div>
					<div class="input_wrapper hm">
						<label><span>* </span><strong>Price to:</strong></label>
			      <%= f.text_field :price_to, class: 'txb' %>
					</div>
					<div class="select_wrapper hm">
						<label><span>* </span><strong>Province </strong></label>
						<%= f.text_field :province, class: 'txb', id: 'province_attributes' %>
					</div>
					<div class="select_wrapper hm">
						<label><span>* </span><strong>City </strong></label>
						<%= f.text_field :city, class: 'txb', id: 'city_attributes' %>
					</div>
					<div class="input_wrapper hm">
						<label><span>* </span><strong>Keyword:</strong></label>
						<%= f.text_field :name, class: 'txb', style: 'width:95%!important' %>
					</div>
					<%= f.submit :search, class: 'btn_search' %>
					<div class="clear"></div>
				</div>
			<% end %>
			<div class="clear"></div>
		</div>
	</div>
	<div class="clear"></div>
</div>