<div class="main_catalog" style="padding-top:0px;">
  <%= link_to 'Delete Compare Products', delete_compare_product_path, class: 'btn btn-danger', method: 'delete' %>
  <ul class="catalog_table">
    <% @products.each_with_index do |car, index| %>
      <li class="is_dealer">
        <%= link_to detail_car_path(car), class: 'thumb' do %>
          <div class= "car_catalog"><%= image_tag car.images.first.image if car.images.present? %></div>
        <% end %>
        <div class="catalog_desc">
          <div class="location">Location: <b><%= car.city %></b></div>
          <div class="title_box">
            <h4>
              <%= link_to detail_car_path(car) do %>
                <%= car.name %>
              <% end %>
            </h4>
            <div class="price"><%= number_to_currency(car.price, unit: 'Rp.') %></div>
          </div>
          <div class="clear"></div>
          <div class="grey_area">
            <span>Fabrication: <b><%= car.year %></b></span>
            <span>Brand: <b><%= car.brand %></b></span>
            <span>Model: <b><%= car.model %></b></span>
            <span>Condition: <b><%= car.condition %></b></span>
          </div>
          <div style="float:right"></div>
          <%= link_to detail_car_path(car),class: "more markered" do %>
            View details
          <% end %>
        </div>
      </li>
    <% end %>
    <%= raw '<div class="alert alert-danger"><a class="close" data-dismiss="alert">Ã—</a>No Data Found</div>' unless @products.present? %>
  </ul>
</div>
<div class="clear"></div>