<%= link_to 'Delete Compare Products', delete_compare_product_path, class: 'btn btn-danger pull-right', method: 'delete' %>
<div class="main_catalog" style="padding-top:0px; width:100%; overflow: scroll;">
  <table class="table catalog_table">
    <tr>
      <% @products.each_with_index do |car, index| %>
        <td>
          <%= link_to detail_car_path(car), class: 'thumb' do %>
            <div class= "car_catalog"><%= image_tag car.images.first.image if car.images.present? %></div>
          <% end %>
          <div class="catalog_desc">
            <div class="location">Location: <b><%= car.city %></b></div>
            <div class="title_box">
              <h4>
                <%= link_to detail_car_path(car) do %>
                  <%= car.name %>
                <% end %>
              </h4>
            </div>
            <div class="clear"></div>
            <div class="scrollit">
              <table class="table table-striped grey_area">
                <tr>
                  <td>Price: <b><%= number_to_currency(car.price, unit: 'Rp.') %></b></td>
                </tr>
                <tr>
                  <td>Fabrication: <b><%= car.year %></b></td>
                </tr>
                <tr>
                  <td>Brand: <b><%= car.brand %></b></td>
                </tr>
                <tr>
                  <td>Model, Body type: <b><%= "#{car.model}, #{car.type_product}" %></b></td>
                </tr>
                <tr>
                  <td>Condition: <b><%= car.condition %></b></td>
                </tr>
                <tr>
                  <td>Fuel: <b><%= car.fuel %></b></td>
                </tr>
                <tr>
                  <td>Engine: <b><%= car.engine %></b></td>
                </tr>
                <tr>
                  <td>Transmision: <b><%= car.transmission %></b></td>
                </tr>
                <tr>
                  <td>Color: <b><%= car.color %></b></td>
                </tr>
                <tr>
                  <td>Condition: <b><%= car.condition %></b></td>
                </tr>
                <tr>
                  <td>Year: <b><%= car.year %></b></td>
                </tr>
                <tr>
                  <td>Plate Number: <b><%= "#{car.plate_number}, #{car.city}, #{car.province}" %></b></td>
                </tr>
                <tr>
                  <td>Expire Date: <b><%= car.exp_date %></b></td>
                </tr>
                <tr>
                  <td>Doors: <b><%= car.door %></b></td>
                </tr>
                <tr>
                  <td>Seats: <b><%= car.seat %></b></td>
                </tr>
                <tr>
                  <td>Cyclinders: <b><%= car.cyclinders %></b></td>
                </tr>
                <tr>
                  <td>Description: <b><%= car.description.html_safe %></b></td>
                </tr>
              </table>
            </div>
          </div>
        </td>
      <% end %>
      <%= raw '<div class="alert alert-danger"><a class="close" data-dismiss="alert">Ã—</a>No Data Found</div>' unless @products.present? %>
    </tr>
  </table>
</div>
<div class="clear"></div>